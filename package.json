{
  "name": "react-vite-boilerplate",
  "description": "A simple boilerplate to use React with Vite",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DuckSoCute/react-vite-boilerplate.git"
  },
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "postinstall": "husky install",
    "lint-staged": "lint-staged",
    "prettier": "prettier . --write"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ignore-path .gitignore",
      "prettier --write --ignore-path .gitignore"
    ],
    "*.{html,css,json}": [
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.32.0",
    "eslint-plugin-react": "^7.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.0"
  }
}
